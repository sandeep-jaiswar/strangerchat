# ===================================
# StrangerChat Environment Variables
# ===================================
# Copy this file to .env.local and fill in your values
# Never commit .env.local to version control!

# ===================================
# NextAuth Configuration (Required)
# ===================================
# Base URL for the application
NEXTAUTH_URL=http://localhost:3000

# Secret for NextAuth.js - MUST be at least 32 characters
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your-secret-key-min-32-chars-long-generate-with-openssl

# ===================================
# OAuth Providers (Required)
# ===================================

# Google OAuth
# Get credentials from: https://console.cloud.google.com/
# 1. Create a new project or select existing
# 2. Enable Google+ API
# 3. Create OAuth 2.0 credentials
# 4. Add authorized redirect URI: http://localhost:3000/api/auth/callback/google
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth (Optional but recommended)
# Get credentials from: https://github.com/settings/developers
# 1. Create a new OAuth App
# 2. Set Authorization callback URL: http://localhost:3000/api/auth/callback/github
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# ===================================
# AdSense (Optional)
# ===================================
# Google AdSense client ID
# For development, you can use a placeholder
NEXT_PUBLIC_ADSENSE_CLIENT=ca-pub-placeholder

# ===================================
# Application Settings (Optional)
# ===================================

# Node environment (development, production, test)
NODE_ENV=development

# Enable debug mode
# DEBUG=true

# WebSocket Configuration
# WS_PORT=3001

# ===================================
# Production Settings (For Deployment)
# ===================================

# Production URL
# NEXTAUTH_URL=https://yourdomain.com

# Database URL (if implementing persistence)
# DATABASE_URL=postgresql://user:password@localhost:5432/strangerchat

# Redis URL (if implementing scaling)
# REDIS_URL=redis://localhost:6379

# Sentry DSN (for error tracking)
# SENTRY_DSN=your-sentry-dsn

# Analytics
# NEXT_PUBLIC_GA_TRACKING_ID=your-ga-id
